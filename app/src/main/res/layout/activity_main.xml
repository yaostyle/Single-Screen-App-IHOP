<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <ImageView
            android:contentDescription="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pancakebg"
            android:scaleType="centerCrop"
            android:layout_margin="0dp"
            android:padding="0dp"
            />

        <ImageView
            android:contentDescription="@null"
            android:id="@+id/ihoplogo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            android:scaleType="fitCenter"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/ihoplogo"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="34sp"
            android:text="@string/url"
            android:textColor="@color/slogan"
            android:paddingTop="190dp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/bottom_slogan"
            android:textSize="20sp"
            android:text="@string/address"
            android:textAlignment="center"
            android:layout_marginTop="790dp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:textColor="@color/address"/>

        <TextView
            android:id="@+id/bottom_slogan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/slogan"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#fff"
            android:background="@color/slogan"
            android:paddingTop="-30dp"
            android:padding="16dp"
            android:fontFamily="sans-serif-condensed"
            android:onClick="goToWeb"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
</ScrollView>



